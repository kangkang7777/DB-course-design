@model Contact

@using (Ajax.BeginForm("Update", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "reLoad" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Contact Information</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            @Html.HiddenFor(model => model.Id)
            @Html.LabelFor(model => model.DistributionCentreName, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.DistributionCentreName)
                @Html.ValidationMessageFor(model => model.DistributionCentreName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.DistributionCentreAddress, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.DistributionCentreAddress)
                @Html.ValidationMessageFor(model => model.DistributionCentreAddress)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(model => model.DistributionCentreTel, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.DistributionCentreTel)
                @Html.ValidationMessageFor(model => model.DistributionCentreTel)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
}